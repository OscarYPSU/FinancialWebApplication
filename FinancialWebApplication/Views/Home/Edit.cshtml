@model FinancialWebApplication.Models.Transactions
@{
    Layout = "_LayOutLoggedIn";
    ViewData["Title"] = "Edit";
}


<h2>Edit Transaction</h2>

<form asp-action="Edit" method="post">
    <div>
        <input type="hidden" id="TransactionId" name="TransactionId" value="@Model.TransactionId"/>
    </div>

    <div class="form-group">
        <label for="TransactionAmount">Amount</label>
        <input name="TransactionAmount" class="form-control" type="number" step="0.01" />
        <label for="Description">Description</label>
        <input name="Description" class="form-control" type="text" />
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="LoggedHome" class="btn btn-secondary">Cancel</a>
</form>
