@model IEnumerable<Transactions>

@{
    Layout = "_LayOutLoggedIn";
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hello @TempData["FirstName"] @TempData["LastName"]!</h1>
    <h2> Budget: @TempData["AccountBudget"]$</h2>
</div>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Transaction Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.Description</td>
                <td>@transaction.Amount</td>
                <td>@transaction.TransactionDate</td>
                <td>
                    <form method="get" asp-action="Edit" asp-controller="Home">
                        <!-- Pass the data via hidden fields or input fields -->
                        <input type="hidden" name="TransactionId" value="@transaction.TransactionId" />
                        <button type="submit" class="btn btn-danger">Edit</button>
                    </form>
 
                    <form asp-action="Delete" asp-controller="Home" method="post">
                        <input type="hidden" name="TransactionId" value="@transaction.TransactionId" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>