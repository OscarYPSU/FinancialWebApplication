@model FinancialWebApplication.Models.Transactions

@{
    // This sets a page title in the ViewData dictionary, which you might use in a layout.
    Layout = "_LayOutLoggedIn"; // Use the logged-in layout
    ViewData["Title"] = "Transactions";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <!-- Transaction form -->
    <form asp-action="Transactions" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label asp-for="Amount">Amount:</label>
            <input asp-for="Amount" type="number" step="0.01" required />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Description">Description:</label>
            <input asp-for="Description" type="text" required />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit">Submit Transaction</button>
    </form>
</body>
</html>
