@model FinancialWebApplication.Models.Transactions

<h2>Edit Transaction</h2>

<form asp-action="EditTransaction" method="post">
    <div>
        <label for="TransactionId">Transaction ID</label>
        <input type="number" id="TransactionId" name="TransactionId" value="@Model.TransactionId" required />
    </div>

    <div class="form-group">
        <label for="TransactionAmount">Amount</label>
        <input class="form-control" type="number" />
        <label for="Description">Description</label>
        <input class="form-control" type="text"/>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="LoggedHome" class="btn btn-secondary">Cancel</a>
</form>
